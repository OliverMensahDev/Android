<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.buildappswithpaulo.breathe.MainActivity">

    <ImageView
        android:id="@+id/lotusImageID"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/breatheimg" />

    <TextView
        android:id="@+id/breathsTakenTxt"
        android:layout_alignParentStart="true"
        android:text="8 Breaths"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lastBreathTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/breathsTakenTxt"
        android:text="Last at 11:45 PM"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/todayMinusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lastBreathTxt"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:text="4 min today" />

    <TextView
        android:id="@+id/oneMinuteTxt"
        android:layout_alignBottom="@+id/todayMinusText"
        android:layout_alignParentEnd="true"
        android:textSize="30sp"
        android:text="1 MIN"
        android:layout_marginEnd="51dp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/startButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Start"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/guideTxt"
        android:layout_below="@+id/lotusImageID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="Breathe"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</RelativeLayout>
