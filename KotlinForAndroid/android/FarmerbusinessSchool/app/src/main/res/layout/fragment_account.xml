<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/financialLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_height="92dp"
                    android:layout_width="match_parent">
                <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:paddingRight="10dp"
                            android:id="@+id/imageicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="@string/financial_details"
                            android:drawableRight= "@android:drawable/arrow_down_float"
                            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                            android:layout_gravity="right" />
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                        app:cardUseCompatPadding="true"
                        app:cardElevation="@dimen/card_elevation_10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:background="@drawable/cardview_background"
                            android:onClick="goToList"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="80dp">
                        <TextView
                                android:textStyle="bold"
                                android:text="@string/money_in"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        <TextView
                                android:layout_marginTop="0dp"
                                android:id="@+id/moneyin"
                                android:textStyle="bold|italic"
                                android:textSize="30sp"
                                android:text="0"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        app:cardUseCompatPadding="true"
                        app:cardElevation="@dimen/card_elevation_10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:background="@drawable/cardview_background"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="80dp">
                        <TextView
                                android:textStyle="bold"
                                android:text="@string/money_out"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        <TextView
                                android:layout_marginTop="0dp"
                                android:id="@+id/moneyout"
                                android:textStyle="bold|italic"
                                android:textSize="30sp"
                                android:text="0"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <android.support.v7.widget.CardView
                    android:id="@+id/netProfitCard"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/card_elevation_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:background="@drawable/cardview_background"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                    <TextView
                            android:id="@+id/netProfitDesc"
                            android:textStyle="bold"
                            android:text="@string/netProfit"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    <TextView
                            android:layout_marginTop="0dp"
                            android:id="@+id/netProfit"
                            android:textStyle="bold|italic"
                            android:textSize="30sp"
                            android:text="0"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/dashboard_chart"
                    android:layout_height="350dp"
                    android:layout_width="match_parent"
            />
        </LinearLayout>

</ScrollView>
