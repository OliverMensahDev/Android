<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:background="@drawable/curvy_edittext"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Name"
        android:id="@+id/editTxtName_LL"
        />
    <EditText
        android:background="@drawable/curvy_edittext"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Email"
        android:inputType="textEmailAddress"
        android:id="@+id/email_LL"
        />
    <EditText
        android:id="@+id/age_LL"
        android:background="@drawable/curvy_edittext"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Age"
        />
    <EditText
        android:id="@+id/PhoneNumber_LL"
        android:background="@drawable/curvy_edittext"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Phone Number"
        />
    <EditText
        android:background="@drawable/curvy_edittext"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add House Number"
        android:id="@+id/HouseNumber_LL"
        />
    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/curvy_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Select High School Level"
        android:id="@+id/SchoolLevel_LL"
        />
    <Button
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:background="@drawable/curvy_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select High School Level"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Physical Location*"
            android:textColor="#000"
            />
        <Button
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:background="@drawable/curvy_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="GPS"
            android:id="@+id/GPS_LL"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnCancel_LL"
            android:textColor="#fff"
            android:background="@drawable/curvy_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel"
            />
        <Button
            android:id="@+id/sSubmitBtn_L"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:background="@drawable/curvy_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Submit"
            />
    </LinearLayout>
</LinearLayout>
